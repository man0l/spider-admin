{% extends '::base.html.twig' %}

{% block body -%}
    <h1>AmazonItem list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Reviews</th>
                <th>Soldby</th>
                <th>Isfba</th>
                <th>Price</th>
                <th>Availability</th>
                <th>Isinstock</th>
                <th>Shortdesc</th>
                <th>Longdesc</th>
                <th>Longdescraw</th>
                <th>Asin</th>
                <th>Upc</th>
                <th>Ean</th>
                <th>Mpn</th>
                <th>Dimensions</th>
                <th>Reviewsnum</th>
                <th>Sellerrank</th>
                <th>Updatedat</th>
                <th>Createdat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_amazon_item_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.reviews }}</td>
                <td>{{ entity.soldby }}</td>
                <td>{{ entity.isfba }}</td>
                <td>{{ entity.price }}</td>
                <td>{{ entity.availability }}</td>
                <td>{{ entity.isinstock }}</td>
                <td>{{ entity.shortdesc }}</td>
                <td>{{ entity.longdesc }}</td>
                <td>{{ entity.longdescraw }}</td>
                <td>{{ entity.asin }}</td>
                <td>{{ entity.upc }}</td>
                <td>{{ entity.ean }}</td>
                <td>{{ entity.mpn }}</td>
                <td>{{ entity.dimensions }}</td>
                <td>{{ entity.reviewsnum }}</td>
                <td>{{ entity.sellerrank }}</td>
                <td>{% if entity.updatedAt %}{{ entity.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_amazon_item_show', { 'id': entity.id }) }}">show</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% endblock %}
